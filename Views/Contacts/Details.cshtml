@model ContactsJSON.Models.Contact

<div class="detailsPanel">
    <dl>
        <dt>
            Nom
        </dt>

        <dd>
            @Model.Name
        </dd>

        <dt>
            Ville
        </dt>

        <dd>
            @Model.Town
        </dd>

        <dt>
            Téléphone
        </dt>

        <dd>
            @Model.Phone
        </dd>

        <dt>
            Courriel
        </dt>

        <dd>
            <a href="mailto:@Model.Email">@Model.Email</a>
        </dd>

        <dt>
            Date de naissance
        </dt>

        <dd>
            @Model.Birth.ToLongDateString()
        </dd>

        <dt>
            Avatar
        </dt>

        <dd>
            <div class="contactAvatarBig" style="background-image:url(@Model.Avatar" )></div>
        </dd>

    </dl>
</div>