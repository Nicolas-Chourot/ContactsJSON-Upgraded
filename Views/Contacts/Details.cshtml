@model ContactsJSON.Models.Contact

<div class="detailsPanel">
    <dl>
        <dt>
            Nom
        </dt>

        <dd>
            @Model.Name
        </dd>

        <dt>
            Ville
        </dt>

        <dd>
            @if (Model.Town != "Inconnue")
            {
                <a href="https://www.google.com/maps/place/@Model.Town,+QC" target="_blank">@Model.Town</a>
            }
            else
            {
                @Model.Town
            }
        </dd>

        <dt>
            Téléphone
        </dt>

        <dd>
            @Model.Phone
        </dd>

        <dt>
            Courriel
        </dt>

        <dd>
            <a href="mailto:@Model.Email">@Model.Email</a>
        </dd>

        <dt>
            Date de naissance
        </dt>

        <dd>
            @Model.Birth.ToLongDateString()
            @if (Model.IsBirthDay)
            {
                <i class="fas fa-birthday-cake birthdayIcon"></i>
            }
        </dd>

        <dt>
            Avatar
        </dt>

        <dd>
            <div class="contactAvatarBig" style="background-image:url(@Model.Avatar" )></div>
        </dd>

    </dl>
</div>